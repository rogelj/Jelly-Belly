class ImageLoader: ObservableObject {
    var didChange = PassthroughSubject&lt;Data, Never&gt;()
    var data = Data() {
        didSet {
            didChange.send(data)
        }
    }
    // I start by defining an OperationQueue to be used in my code. I am using the main thread as per the original DispatchQueue. 
    let downloadQueue = OperationQueue.main
